<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.alphanese.ezsoc5.AdvSearch"
    android:background="@drawable/background4">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Select Date:"
        android:id="@+id/DateText"
        android:layout_alignParentTop="false"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Select Timings:"
        android:id="@+id/textView3"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/textView5"
        android:layout_alignEnd="@+id/textView5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Select Room:"
        android:id="@+id/textView5"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/textView10"
        android:layout_toStartOf="@+id/textView10"
        android:layout_marginBottom="79dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Day:"
        android:id="@+id/textView9"
        android:layout_below="@+id/DateText"
        android:layout_toRightOf="@+id/DateText"
        android:layout_toEndOf="@+id/DateText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Month"
        android:id="@+id/textView10"
        android:layout_marginTop="70dp"
        android:layout_below="@+id/textView9"
        android:layout_alignLeft="@+id/textView9"
        android:layout_alignStart="@+id/textView9" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/DaySelection"
        android:layout_below="@+id/DateText"
        android:layout_toRightOf="@+id/textView10"
        android:layout_toEndOf="@+id/textView10"
        android:spinnerMode="dropdown" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/MonthSelection"
        android:spinnerMode="dropdown"
        android:layout_alignTop="@+id/textView10"
        android:layout_alignLeft="@+id/DaySelection"
        android:layout_alignStart="@+id/DaySelection" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="From:"
        android:id="@+id/textView31"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/MonthSelection"
        android:layout_toStartOf="@+id/MonthSelection" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/TimeSelection1"
        android:layout_alignTop="@+id/textView31"
        android:layout_alignLeft="@+id/MonthSelection"
        android:layout_alignStart="@+id/MonthSelection"
        android:spinnerMode="dropdown" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/TimeSelection2"
        android:layout_alignLeft="@+id/TimeSelection1"
        android:layout_alignStart="@+id/TimeSelection1"
        android:spinnerMode="dropdown"
        android:layout_below="@+id/TimeSelection1" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/roomSelection"
        android:layout_alignTop="@+id/textView5"
        android:layout_alignLeft="@+id/TimeSelection2"
        android:layout_alignStart="@+id/TimeSelection2"
        android:spinnerMode="dropdown" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search!"
        android:id="@+id/button3"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="To:"
        android:id="@+id/textView40"
        android:layout_alignTop="@+id/TimeSelection2"
        android:layout_alignRight="@+id/textView31"
        android:layout_alignEnd="@+id/textView31" />

</RelativeLayout>
